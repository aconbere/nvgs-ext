{
  "manifest_version": 3,
  "name": "nvgs",
  "description": "Submit sites to the nvgs index",
  "version": "0.0.1",
  "browser_specific_settings": {
      "gecko": {
        "id": "nvgs@conbere.corg"
      }
  },
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["tabs"],
  "host_permissions": [
      "*://localhost/*"
  ],
  "action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_title": "nvgs"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "nvgs"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/index.html"
  }
}
