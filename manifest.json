{
  "manifest_version": 3,
  "name": "nvgs",
  "description": "Submit sites to the nvgs index",
  "version": "0.0.2",
  "browser_specific_settings": {
      "gecko": {
        "id": "nvgs@conbere.corg"
      }
  },
  "icons": {
        "16": "icons/triangle16.png",
        "32": "icons/triangle32.png",
        "48": "icons/triangle48.png",
        "128": "icons/triangle128.png"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": [
      "*://localhost/*",
      "https://nvgs.xyz/*"
  ],
  "action": {
    "default_icon": "icons/triangle_grey.svg",
    "default_title": "add site"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/index.html"
  }
}
